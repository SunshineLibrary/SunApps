<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_main_activity_navi" >

        <RelativeLayout
            android:id="@+id/navi_activity_top_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingTop="4dp" >

            <TextView
                android:id="@+id/navigation_menu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/navi_activity_navi_list_view_text"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/navigation_menu_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_side_list_back" />
        </RelativeLayout>

        <com.ssl.curriculum.math.component.NavigationListView
            android:id="@+id/navi_list_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navi_activity_top_container"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:dividerHeight="2dp"
            android:fadingEdge="none" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_side_shadow" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2.5" >

        <RelativeLayout
            android:id="@+id/test_relative"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/test_relative"
            android:visibility="visible" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/test_linear"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#F6F2E4"
            android:orientation="vertical"
            android:visibility="invisible" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_title_banner" >

                <ImageButton
                    android:id="@+id/btn_navi_activity_restart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/btn_navi_activity_continue"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_main_start_over_selector" />

                <ImageButton
                    android:id="@+id/btn_navi_activity_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toLeftOf="@+id/btn_navi_activity_practice"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_main_continue_course_pressed" />

                <ImageButton
                    android:id="@+id/btn_navi_activity_practice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_main_start_practice_pressed" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageview_navi_activity_lesson_icon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textview_navi_activity_lesson_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textview_navi_activity_lesson_stat"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="heihei" />

                    <ProgressBar
                        android:id="@+id/progressbar_navi_activity_lesson_pb"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/listview_navi_activity_lesson_description"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent" />

            <com.ssl.curriculum.math.component.HorizontalListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>