<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/video_frame_background">
    <TextView android:layout_height="62dp"
              android:layout_width="fill_parent"
              android:gravity="center_vertical|left"
              android:text="[Title]"
              android:textSize="20pt"/>
    <RelativeLayout android:id="@+id/content_screen_video_frame"
                    android:layout_width="255dp"
                    android:layout_height="237dp"
                    android:layout_gravity="center_horizontal">
        <com.ssl.curriculum.math.component.videoview.VideoPlayer android:id="@+id/content_screen_video_field"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="center"/>
    </RelativeLayout>
    <TextView android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:gravity="center"
              android:text="NO.2"
              android:textSize="20pt"/>
</LinearLayout>