<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/audio_frame_background"
              android:orientation="vertical">

    <TextView android:id="@+id/audio_title"
              android:layout_width="fill_parent"
              android:layout_height="62dp"
              android:gravity="center_vertical|left"
              android:paddingLeft="19dp"
              android:paddingRight="19dp"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:textSize="18pt"/>

    <RelativeLayout android:id="@+id/content_screen_audio_frame"
                    android:layout_width="655dp"
                    android:layout_height="437dp"
                    android:layout_gravity="center_horizontal">

        <com.ssl.curriculum.math.component.audioview.AudioPlayer
                android:id="@+id/content_screen_audio_field"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"/>
    </RelativeLayout>

    <TextView android:id="@+id/audio_descr"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="left"
              android:paddingLeft="19dp"
              android:paddingRight="19dp"
              android:text=""
              android:textSize="14pt"/>

</LinearLayout>