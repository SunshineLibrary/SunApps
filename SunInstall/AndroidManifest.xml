<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sunshine.support.installer"
          android:versionCode="1"
          android:versionName="1.0"
          android:sharedUserId="android.uid.system"
        >

    <uses-sdk android:minSdkVersion="8"/>

    <uses-permission android:name="android.permission.INSTALL_PACKAGES"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name">

        <service android:name=".service.InstallerService"
                 android:permission="com.sunshine.support.installer.INSTALL_PERMISSION"
                 android:enabled="true">
            <intent-filter>
                <action android:name="com.sunshine.support.action.scheduleInstall"/>
                <data android:scheme="file"/>
            </intent-filter>
        </service>

    </application>

    <permission android:protectionLevel="normal" android:name="com.sunshine.support.installer.INSTALL_PERMISSION"/>

</manifest>
